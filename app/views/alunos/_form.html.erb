<%= form_for(@aluno) do |f| %>
  <% if @aluno.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @aluno.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :email, 'E-mail' %><br />
    <%= f.text_field :email %>
  </div>
  <fieldset>
  <legend>Filiação</legend>
    <div class="field">
      <%= f.label :pai %><br />
      <%= f.text_field :pai %>
    </div>
    <div class="field">
      <%= f.label :mae, 'Mãe' %><br />
      <%= f.text_field :mae %>
    </div>
  </fieldset>

  <div class="field">
    <%= f.label :data_de_nascimento, 'Data de nascimento' %><br />
    <%= f.text_field :data_de_nascimento %>
  </div>
  <div class="field">
    <%= f.label :sexo %><br />
    <%= f.select :sexo, Aluno::SEXO, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :nacionalidade %><br />
    <%= f.text_field :nacionalidade %>
  </div>
  <div class="field">
    <%= f.label :naturalidade %><br />
    <%= f.text_field :naturalidade %>
  </div>
  <div class="field">
    <%= f.label :estado_civil %><br />
    <%= f.text_field :estado_civil %>
  </div>

  <fieldset>
  <legend>Documentação</legend>
    <div class="field">
      <%= f.label :cpf %><br />
      <%= f.text_field :cpf %>
    </div>

    <div class="field">
      <%= f.label :rg %><br />
      <%= f.text_field :rg %>
    </div>

    <div class="field">
      <%= f.label :orgao_emissor_do_rg %><br />
      <%= f.text_field :orgao_emissor_do_rg %>
    </div>

    <div class="field">
      <%= f.label :estado_do_rg %><br />
      <%= f.text_field :estado_do_rg %>
    </div>

    <div class="field">
      <%= f.label :data_de_expedicao_do_rg %><br />
      <%= f.text_field :data_de_expedicao_do_rg %>
    </div>

    <div class="field">
      <%= f.label :numero_do_titulo_de_eleitor %><br />
      <%= f.text_field :numero_do_titulo_de_eleitor %>
    </div>

    <div class="field">
      <%= f.label :zona_do_titulo_de_eleitor %><br />
      <%= f.text_field :zona_do_titulo_de_eleitor %>
    </div>

    <div class="field">
      <%= f.label :secao_do_titulo_de_eleitor %><br />
      <%= f.text_field :secao_do_titulo_de_eleitor %>
    </div>

    <div class="field">
      <%= f.label :estado_do_titulo_de_eleitor %><br />
      <%= f.text_field :estado_do_titulo_de_eleitor %>
    </div>

    <div class="field">
      <%= f.label :data_de_emissao_do_titulo_de_eleitor %><br />
      <%= f.text_field :data_de_emissao_do_titulo_de_eleitor %>
    </div>

    <div class="field">
      <%= f.label :numero_do_certificado_de_reservista %><br />
      <%= f.text_field :numero_do_certificado_de_reservista %>
    </div>

    <div class="field">
      <%= f.label :orgao_do_certificado_de_reservista %><br />
      <%= f.text_field :orgao_do_certificado_de_reservista %>
    </div>

    <div class="field">
      <%= f.label :categoria_do_certificado_de_reservista %><br />
      <%= f.text_field :categoria_do_certificado_de_reservista %>
    </div>

    <div class="field">
      <%= f.label :data_de_emissao_do_certificado_de_reservista %><br />
      <%= f.text_field :data_de_emissao_do_certificado_de_reservista %>
    </div>

    <div class="field">
      <%= f.label :estado_do_certificado_de_reservista %><br />
      <%= f.text_field :estado_do_certificado_de_reservista %>
    </div>


  </fieldset>
  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

