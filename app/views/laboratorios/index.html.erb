<h1>Listando laboratórios</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Sigla</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @laboratorios.each do |laboratorio| %>
  <tr>
    <td><%= laboratorio.nome %></td>
    <td><%= laboratorio.sigla %></td>
    <td><%= link_to 'Exibir', laboratorio %></td>
    <td><%= link_to 'Editar', edit_laboratorio_path(laboratorio) %></td>
    <td><%= link_to 'Excluir', laboratorio, :confirm => 'Tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

